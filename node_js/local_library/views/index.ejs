<%- include('layout') %>

<h1><%= title %></h1>
<p>
  welcome to <em>Local Library</em>, a very basic Express website for your
  friendly neighbourhood library
</p>
<h1>Dynamic Content</h1>
<% if (error) { %>
<p>Error getting dynamic content</p>
<% } else { %>
<p>The library has the following record counts:</p>
<ul>
  <li>
    <strong>Books: </strong>
    <%= data.book_count %>
  </li>
  <li>
    <strong>Copies: </strong>
    <%= data.book_instance_count %>
  </li>
  <li>
    <strong>Copies available: </strong>
    <%= data.book_instance_available_count %>
  </li>
  <li>
    <strong>Authors: </strong>
    <%= data.author_count %>
  </li>
  <li>
    <strong>Genres: </strong>
    <%= data.genre_count %>
  </li>
</ul>
<% } %>
