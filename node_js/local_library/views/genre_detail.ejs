<%- include('layout') %>

<h1>Genre: <%= genre.name %></h1>

<div class="genre-books">
  <h3>Books</h3>
  <% if (genre_books){ %> <% for ( const book of genre_books){ %>
  <div >
    <a href="<%= book.url %>"><%= book.title %></a>
    <p><%= book.summary %></p>
  </div>
  <% } %> <% } else { %>
  <p>This genre doesn't have any books.</p>
  <% } %>
</div>
